<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@mipmap/bg_pattern"
    tools:context="ru.icqparty.moneytracker.AddItemActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_activity_layout_height"
        android:background="@color/additem_activity_bg_form"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/additem_padding_left"
        android:paddingRight="@dimen/additem_padding_left">

        <EditText
            android:id="@+id/name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/add_item_activity_hint_name"
            android:inputType="text"
            android:maxLines="1" />
        <EditText
            android:id="@+id/value_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="0"
            android:inputType="number"
            android:maxLines="1" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:background="@null"
            android:gravity="right"
            android:text="@string/char_rub" />
        <Button
            android:id="@+id/add_button_item"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/ic_add"
            android:enabled="false" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
